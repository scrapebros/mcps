{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022", "DOM"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "declaration": false,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@tests/*": ["tests/*"],
      "@fixtures/*": ["fixtures/*"],
      "@utils/*": ["tests/utils/*"]
    },
    "types": ["@playwright/test", "node"]
  },
  "include": [
    "tests/**/*.ts",
    "tests/**/*.js",
    "playwright.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "reports"
  ]
}