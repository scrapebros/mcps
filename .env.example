# Base URL for testing
BASE_URL=http://localhost:3000

# Server start command (for webServer in playwright.config.ts)
START_SERVER_COMMAND=npm run dev

# Test environment
TEST_ENV=local

# Browser settings
HEADLESS=true
SLOW_MO=0

# Timeout settings (in milliseconds)
DEFAULT_TIMEOUT=30000
NAVIGATION_TIMEOUT=30000

# Screenshot and video settings
SCREENSHOT_ON_FAILURE=true
VIDEO_ON_FAILURE=true
TRACE_ON_FAILURE=true

# Parallel execution
WORKERS=4

# Retry settings
RETRY_FAILED_TESTS=2

# API endpoints (if testing APIs)
API_BASE_URL=http://localhost:3000/api
API_KEY=your-api-key-here

# Authentication (if needed)
TEST_USERNAME=testuser@example.com
TEST_PASSWORD=testpassword123

# Report settings
GENERATE_HTML_REPORT=true
GENERATE_JSON_REPORT=true
GENERATE_ALLURE_REPORT=false

# CI/CD settings
CI=false

# Custom test data paths
TEST_DATA_PATH=./fixtures/test-data.json
TEST_UPLOADS_PATH=./fixtures/uploads

# Database connection (if needed for test setup/teardown)
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_NAME=test_db
TEST_DB_USER=test_user
TEST_DB_PASSWORD=test_password

# External services
MOCK_SERVER_URL=http://localhost:4000
SMTP_TEST_SERVER=smtp.mailtrap.io

# Feature flags
ENABLE_VISUAL_TESTING=false
ENABLE_ACCESSIBILITY_TESTING=true
ENABLE_PERFORMANCE_TESTING=true

# Debug settings
DEBUG=false
VERBOSE_LOGGING=false