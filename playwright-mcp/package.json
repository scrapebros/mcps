{
  "name": "mcp-playwright",
  "version": "1.0.0",
  "description": "MCP server for Playwright web testing and automation",
  "main": "build/index.js",
  "type": "module",
  "bin": {
    "mcp-playwright": "./build/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node build/index.js",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:headed": "playwright test --headed",
    "test:chrome": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:parallel": "playwright test --workers=4",
    "test:serial": "playwright test --workers=1",
    "test:report": "playwright show-report",
    "test:codegen": "playwright codegen",
    "test:trace": "playwright test --trace on",
    "install:browsers": "playwright install",
    "install:deps": "playwright install-deps"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "playwright": "^1.48.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "@types/node": "^22.5.0",
    "tsx": "^4.7.0",
    "typescript": "^5.5.4"
  },
  "keywords": [
    "mcp",
    "playwright",
    "testing",
    "e2e",
    "automation",
    "web-testing",
    "browser-automation"
  ],
  "author": "",
  "license": "MIT"
}